def Horror_Geschichte_3(Horror_Geschichte_3):
    if "{Schwert}" in Horror_Geschichte_3:
        return(
        """
        Seine verzauberte Waffe ist das Schwert
        
        """)
    if "{Axt}" in Horror_Geschichte_3:
        return(
        """
        Seine verzauberte Waffe ist die Axt
        
        """)        
    if "{Speer}" in Horror_Geschichte_3:
        return(
        """
        Seine verzauberte Waffe ist der Speer
        
        """)    

def Horror_Geschichte_4(Horror_Geschichte_4):
    if "{Unsichtbarkeit}" in Horror_Geschichte_4:
        return(
        """
        {Name_Held} kann sich durch seine Geheimfähigkeit Unsichtbar machen
        
        """)
    if "{Schnelligkeit}" in Horror_Geschichte_4:
        return(
        """
        {Name_Held} kann durch seine Geheimfähigkeit an schnelligkeit gewinnen 
        
        """)        
    if "{Srungkraft}" in Horror_Geschichte_4:
        return(
        """
        {Name_Held} kann durch seine Geheimfähigkeit an Sprungkraft gewinnen
        
        """)             

def Horror_Geschichte_5(Horror_Geschichte_5):
